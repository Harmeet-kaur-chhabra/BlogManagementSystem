@using BlogModels;
@model Blog

<h2>Delete Blog</h2>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" readonly class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Content">Content:</label>
        <textarea asp-for="Content" readonly class="form-control"></textarea>

    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <textarea asp-for="Category" readonly class="form-control"></textarea>

    </div>
    <div class="col-5 offset-2">
        <a asp-controller="Blog" asp-action="Index" class="btn-primary btn form-control">Back </a>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
</form>

